<Window x:Class="lol_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="166,13,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="175"/>
        <Label Content="Enter Summoner Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Height="187" Width="497" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Summoner Name"/>
                <DataGridTextColumn Header="Champion"/>
                <DataGridTextColumn Header="Current Rank"/>
                <DataGridTextColumn Header="Wins"/>
                <DataGridTextColumn Header="Ranked Wins"/>
                <DataGridTextColumn Header="KDA"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Fetch" HorizontalAlignment="Left" Margin="362,14,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
